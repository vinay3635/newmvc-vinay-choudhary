<?php
$messageObject = Ccc::getModel('Core_Message');
$messageObject->getSession()->start();
if (isset($_SESSION['message'])) {
	$messages = $messageObject->getMessages();
	foreach ($messages as $type => $message) {
		echo "<p class ='alert alert-" . $type . "' >" . $message . "</p>";
	}
	$messageObject->clearMessage();
}
?>